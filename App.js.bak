import './App.css';

import SideNav, { Toggle, Nav, NavItem, NavIcon, NavText } from '@trendmicro/react-sidenav';
import StyledSideNav from "./StyledNav";
import styled from 'styled-components';
import React, { Component } from 'react';


// Define main component here
const Main = styled.main`
    position: relative;
    overflow: hidden;
    transition: all .15s;
    padding: 20px 20px;
    margin-left: ${props => (props.expanded ? 240 : 64)}px;
`;


function Print(props) {
  return <text>name = {props.name}</text>;
}


function Content(props){
  if (props.name === 'home') {
    return(
      <h1>Home</h1>
    );
  } else if (props.name === 'publications'){
    return(
      <h1>Publications</h1>
    );
  } else if (props.name === 'projects'){
    return(
      <h1>Projects</h1>
    );
  } else if (props.name === 'posters'){
    return(
      <h1>Posters</h1>
    );
  } else {
    return(
      <div>Error unknown page identifier {JSON.stringify(props.name)}</div>
    );
  }
}


class App extends Component {
  state = {
    selected: 'home',
    expanded: false
  };

  // onSelect = (selected) => {
  //   this.setState({ selected: selected });
  // };
  // onToggle = (expanded) => {
  //   this.setState({ expanded: expanded });
  // };

  render() {
    return (
        <div>
          <StyledSideNav
              onSelect = {(selected) => {
                // Add your code here
                this.setState({ selected: selected });
              }}
              onToggle = {(expanded) => {
                this.setState({ expanded: expanded });
              }}
            >
            <StyledSideNav.Toggle/>
            <StyledSideNav.Nav defaultSelected="home">
              <NavItem eventKey="home">
                <NavIcon>
                  <i className="fa fa-fw fa-home" style={{fontSize: '1.75em'}}/>
                </NavIcon>
                <NavText>
                  Home
                </NavText>
              </NavItem>
              <NavItem eventKey="publications">
                <NavIcon>
                  <i className="fa fa-fw fa-publications" style={{fontSize: '1.75em'}}/>
                </NavIcon>
                <NavText>
                  Publications
                </NavText>
              </NavItem>
              <NavItem eventKey="projects">
                <NavIcon>
                  <i className="fa fa-fw fa-projects" style={{fontSize: '1.75em'}}/>
                </NavIcon>
                <NavText>
                  Projects
                </NavText>
              </NavItem>
              <NavItem eventKey="posters">
                <NavIcon>
                  <i className="fa fa-fw fa-posters" style={{fontSize: '1.75em'}}/>
                </NavIcon>
                <NavText>
                  Posters
                </NavText>
              </NavItem>
            </StyledSideNav.Nav>
          </StyledSideNav>
            <Main expanded={this.state.expanded}>
              <Content name={this.state.selected} />
              <Print name='aaaa'/>
            </Main>
        </div>
    );
  }
}

export default App;
